<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('head') %>
    <%- include('layout') %>
    <title><%= title %></title>
</head>
<body>
    <% include ./panel %>
    <% for(var i = 0;i < articles.length;i++) { %>
        <% var article = articles[i]; %>
        <% var user = article.user %>
        <% include ./article-template.ejs %>
    <% } %>
    <nav aria-label="Page navigation">
            <ul class="pagination">
        <% if(page[0] > 1) { %>
            <li class="page-item">
                <a class="page-link" href="/<%= page[0]-1 %>" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
        <% } %>
        <% if(page[1] > page[0]) { %>
            <li class="page-item">
                <a class="page-link" href="/<%= page[0]+1 %>" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        <% } %>
    </ul>
</nav>
    </div>
    
</body>
</html>